<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= list.name %> - Listify</title>
		<link
			href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
			rel="stylesheet" />
	</head>
	<body class="min-h-screen bg-gray-50">
		<div class="max-w-6xl mx-auto px-4 py-8">
			<div class="flex items-center gap-4 mb-8">
				<a
					href="/shopping-lists"
					class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 flex items-center gap-2">
					← Voltar às Listas
				</a>
				<h1 class="text-4xl font-bold text-gray-800">
					🛒 <%= list.name %>
				</h1>
			</div>

			<div class="space-y-8">
				<% const totalItems = items.length; const purchasedItems =
				items.filter(item => item.purchased).length; const
				remainingItems = totalItems - purchasedItems; const
				completionPercentage = totalItems > 0 ?
				Math.round((purchasedItems / totalItems) * 100) : 0; %> <% if
				(totalItems > 0) { %>
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
					<div
						class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
						<div class="text-3xl font-bold text-blue-600 mb-2">
							<%= totalItems %>
						</div>
						<div class="text-sm text-gray-600">Total de Itens</div>
					</div>
					<div
						class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
						<div class="text-3xl font-bold text-green-600 mb-2">
							<%= purchasedItems %>
						</div>
						<div class="text-sm text-gray-600">Comprados</div>
					</div>
					<div
						class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
						<div class="text-3xl font-bold text-orange-600 mb-2">
							<%= remainingItems %>
						</div>
						<div class="text-sm text-gray-600">Restantes</div>
					</div>
					<div
						class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
						<div class="text-3xl font-bold text-purple-600 mb-2">
							<%= completionPercentage %>%
						</div>
						<div class="text-sm text-gray-600">Completo</div>
					</div>
				</div>
				<% } %>

				<div
					class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
					<h3 class="text-xl font-semibold text-gray-800 mb-4">
						Adicionar Novo Item
					</h3>
					<form
						method="POST"
						action="/shopping-lists/<%= list.id %>/items"
						class="flex flex-col sm:flex-row gap-4">
						<input
							type="text"
							name="description"
							placeholder="Digite a descrição do item..."
							required
							class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" />
						<input
							type="number"
							name="quantity"
							value="1"
							min="1"
							placeholder="Qtd"
							class="w-24 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" />
						<button
							type="submit"
							class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 whitespace-nowrap">
							Adicionar Item
						</button>
					</form>
				</div>

				<% if (items.length === 0) { %>
				<div
					class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
					<div class="text-6xl mb-4">🛍️</div>
					<h3 class="text-xl font-semibold text-gray-800 mb-2">
						Nenhum item adicionado ainda!
					</h3>
					<p class="text-gray-600">
						Adicione seu primeiro item acima para começar as
						compras.
					</p>
				</div>
				<% } else { %>
				<div
					class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
					<h3 class="text-xl font-semibold text-gray-800 mb-6">
						Itens da Lista
					</h3>
					<div class="space-y-4">
						<% items.forEach(item => { %>
						<div
							class="flex items-center gap-4 p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors <%= item.purchased ? 'opacity-75' : '' %>">
							<form
								method="POST"
								action="/shopping-lists/<%= list.id %>/items/<%= item.id %>/toggle"
								class="flex-shrink-0">
								<input
									type="hidden"
									name="purchased"
									value="<%= !item.purchased %>" />
								<input type="checkbox" class="w-5 h-5
								text-blue-600 bg-gray-100 border-gray-300
								rounded focus:ring-blue-500 focus:ring-2
								cursor-pointer" <%= item.purchased ? 'checked' :
								'' %> onchange="this.form.submit()" >
							</form>

							<div class="flex-1">
								<div
									class="font-medium text-gray-800 <%= item.purchased ? 'line-through' : '' %>">
									<%= item.description %>
								</div>
								<div class="text-sm text-gray-600">
									Quantidade: <%= item.quantity %>
								</div>
							</div>

							<form
								method="POST"
								action="/shopping-lists/<%= list.id %>/items/<%= item.id %>/delete"
								class="flex-shrink-0">
								<button
									type="submit"
									class="bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-3 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 text-sm"
									onclick="return confirm('Tem certeza que deseja remover este item?')">
									Remover
								</button>
							</form>
						</div>
						<% }) %>
					</div>
				</div>
				<% } %>
			</div>
		</div>

		<script src="/js/app.js"></script>
		<script>
			// Auto-submit form when checkbox is clicked
			document
				.querySelectorAll("input[type='checkbox']")
				.forEach((checkbox) => {
					checkbox.addEventListener("change", function () {
						this.closest("form").submit()
					})
				})
		</script>
	</body>
</html>
